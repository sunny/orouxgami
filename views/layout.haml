      Orouxgami
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}
    %link{:rel => 'stylesheet', :href => '/stylesheet.css', :type => 'text/css'}

  %body
    #page
      #header
        %h1
          %a{:href => "/"}
            Le Merveilleux et Fabuleux Zoo Roux
