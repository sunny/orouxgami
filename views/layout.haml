      #menu
        %ul
          %li.abecedaire
            %a{:href => "/taxonomie"}  Abécédaire des pensionnaires
          %li.zoo-map
            %a{:href => "/carte"}       Zoo Map
          %li.auteurs
            %a{:href => "/auteurs"}     Auteurs
          %li.faq
            %a{:href => "/faq"}         Faq
          %li.nous-ecrire
            %a{:href => "/nous-ecrire"} Nous écrire

